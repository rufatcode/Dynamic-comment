<!-- our product area start -->
<section class="our-product section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Our Product</h2>
                    <p class="sub-title">
                        Lorem ipsum dolor sit amet consectetur adipisicing
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                    <!-- product single item start -->
                    @foreach (var procuct in Model)
                    {
                        if (procuct.Category.Name.Contains("Our Product"))
                        {
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a asp-action="Detail"  asp-route-Id="@procuct.Id">
                                        <img src="~/assets/img/@procuct.ProductImages.FirstOrDefault(pi=>pi.IsMain).ImgUrl" alt="" />
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a href="product-details.html">@procuct.Name</a>
                                    </h5>
                                    <div class="price-box">
                                        <span class="price-regular">$@procuct.Price</span>
                                        <span class="price-old"><del>$@(procuct.Price-procuct.Price*procuct.SalePercantage/100)</del></span>
                                    </div>
                                    <div class="product-action-link">
                                        <a href="#" data-toggle="tooltip" title="Wishlist">
                                            <i class="ion-android-favorite-outline"></i>
                                        </a>
                                        <a href="#" data-toggle="tooltip" title="Add To Cart">
                                            <i class="ion-bag"></i>
                                        </a>
                                        <a href="#" data-toggle="modal" data-target="#quick_view">
                                            <span data-toggle="tooltip" title="Quick View">
                                                <i class="ion-ios-eye-outline"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                    <!-- product single item start -->

                </div>
            </div>
        </div>
    </div>
</section>
<!-- our product area end -->
